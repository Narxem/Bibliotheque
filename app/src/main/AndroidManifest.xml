            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CreateBook"
            android:label="@string/createBook" >
        </activity>
        <activity
            android:name=".activities.ViewBookList"
            android:label="@string/title_activity_view_book" >
        </activity>
        <activity
