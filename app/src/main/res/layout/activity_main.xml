<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main"
    tools:context=".Main">

    <Button
        android:id="@+id/createBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/createBook"
        android:onClick="create"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/library"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_above="@id/createBook"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:textSize="32dp"
        android:textColor="@color/Black"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/scanBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/scanBook"
        android:onClick="scanner"
        android:layout_below="@+id/createBook"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/viewBookList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/viewBookList"
        android:onClick="view"
        android:textSize="20dp"
        android:layout_below="@+id/scanBook"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
